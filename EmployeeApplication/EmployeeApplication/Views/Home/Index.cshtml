@{
    ViewBag.Title = "Home Page";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <label>Name <span style="color:red">*</span></label>
            <input type="text" class="form-control" id="txtEmp_Name" />
            <p id="PtxtEmp_Name" style="color:red;">
        </div>
        <div class="col-md-6">
            <label>Father Name <span style="color:red">*</span> </label>
            <input type="text" class="form-control" id="txtEmp_FatherName" />
            <p id="PtxtEmp_FatherName" style="color:red;">
        </div>
        <div class="col-md-6">
            <label>Mother Name <span style="color:red">*</span></label>
            <input type="text" class="form-control" id="txtEmp_MotherName" />
            <p id="PtxtEmp_MotherName" style="color:red;">
        </div>
        <div class="col-md-6">
            <label>DOB <span style="color:red">*</span></label>
            <input type="date" class="form-control" id="txt_DOB" />
            <p id="Ptxt_DOB" style="color:red;">
        </div>
        <div class="col-md-6">
            <label>Gender <span style="color:red">*</span></label>
            <select class="form-control" id="Sel_Gender">
                <option value="0">--Select--</option>
                <option value="1">Male</option>
                <option value="2">Female</option>
            </select>
            <p id="PSel_Gender" style="color:red;">
        </div>
        <div class="col-md-6">
            <label>Marital Status <span style="color:red">*</span></label>
            <select class="form-control" id="Sel_Marital_Status">
                <option value="0">--Select--</option>
                <option value="1">Married</option>
                <option value="2">Unmarried</option>
            </select>
            <p id="PSel_Marital_Status" style="color:red;">
        </div>
        <div class="col-md-6">
            <label>Address : </label>
            <input type="text" class="form-control" id="txt_Address" />
            <p id="Ptxt_Address" style="color:red;">
        </div>
        <input type="hidden" id="txtEmp_id"/>

        <div class="col-md-6" style="margin-top: 50px;">
            <button type="button" class="btn btn-success" id="btn_submit">Submit</button>
        </div>
    </div>
</div>
<div>
    <table class="table">
        <thead>
            <th>SNo</th>
            <th>Name</th>
            <th>Father Name</th>
            <th>Mother Name</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Marital Status</th>
            <th>Address</th>
            <th>Action</th>
        </thead>
        <tbody id="tbl_employee"></tbody>
    </table>
</div>

<script src="~/Content/ApplicationJs/Employee.js"></script>